# Environment variables for HeatCode deployment
# Copy this file to .env and update the values

# Django Configuration
DEBUG=0
DJANGO_SECRET_KEY=your-very-secret-key-here-change-this-in-production
ALLOWED_HOSTS=your-ec2-instance-ip,your-domain.com,localhost,127.0.0.1

# Superuser Configuration
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@heatcode.com
DJANGO_SUPERUSER_PASSWORD=HeatCode123!

# Database Configuration (for PostgreSQL in production)
POSTGRES_PASSWORD=HeatCode123!
POSTGRES_DB=heatcode
POSTGRES_USER=postgres

